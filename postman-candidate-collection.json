                "title": "Senior Software Engineer",
                "company": "Tech Corp",
                "location": "New York, USA",
                "startDate": "2020-01-01",
                "endDate": null,
                "isCurrent": true,
                "description": "Leading full-stack development projects",
                "achievements": [
                  "Reduced system latency by 40%",
                  "Led team of 5 developers"
