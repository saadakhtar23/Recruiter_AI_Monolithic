        "url": "{{baseUrl}}/api/candidates/register"
      }
    },
    {
      "name": "Upload Resume",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { 
              "key": "resume", 
              "type": "file", 
              "src": "/path/to/resume.pdf",
              "description": "Resume file (PDF/DOC/DOCX)"
            }
          ]
        },
        "url": "{{baseUrl}}/api/candidates/documents/resume"
      }
    },
    {
      "name": "Upload Profile Picture",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { 
              "key": "profilePicture", 
              "type": "file", 
              "src": "/path/to/picture.jpg",
              "description": "Profile picture (JPG/PNG)"
            }
          ]
        },
        "url": "{{baseUrl}}/api/candidates/profile-picture"
      }
    },
    {
      "name": "Update Professional Info",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": {
            "professionalInfo": {
              "currentTitle": "Tech Lead",
              "skills": [
                {
                  "name": "AWS",
                  "level": "advanced",
                  "yearsOfExperience": 2
                }
              ],
              "salaryExpectation": {
                "minimum": 120000,
                "maximum": 180000,
                "currency": "USD"
              }
            }
          }
        },
        "url": "{{baseUrl}}/api/candidates/professional-info"
      }
    },
    {
      "name": "Add Education",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": {
            "degree": "Master of Science",
            "field": "Computer Science",
            "institution": "Tech University",
            "startYear": 2020,
            "endYear": 2022,
            "grade": "3.9/4.0",
            "isCompleted": true
          }
        },
        "url": "{{baseUrl}}/api/candidates/education"
      }
    },
    {
      "name": "Add Experience",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": {
            "title": "Software Engineer",
            "company": "Previous Corp",
            "location": "Boston, USA",
            "startDate": "2018-01-01",
            "endDate": "2019-12-31",
            "isCurrent": false,
            "description": "Full stack development",
            "achievements": ["Implemented CI/CD pipeline"],
            "technologies": ["Java", "Spring Boot", "MySQL"]
          }
        },
        "url": "{{baseUrl}}/api/candidates/experience"
      }
    },
    {
      "name": "Update Preferences",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{candidateToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": {
            "preferences": {
              "jobTypes": ["full-time", "contract"],
